  <script>
    // Desplegables para QUIENES SOMOS y NUESTRO ENFOQUE
    document.querySelectorAll('.collapsible').forEach(function(card) {
      card.querySelector('.collapsible-title').addEventListener('click', function() {
        card.classList.toggle('active');
        // Cerrar el otro si est√° abierto
        document.querySelectorAll('.collapsible').forEach(function(other) {
          if (other !== card) other.classList.remove('active');
        });
      });
    });
    // Hacer que los FAQ se abran/cierre al clickar (en m√≥vil/t√°ctil)
    document.querySelectorAll('.faq-card').forEach(card => {
      card.addEventListener('click', function() {
        if(window.innerWidth < 900) {
          document.querySelectorAll('.faq-card').forEach(c => { if(c!==card) c.classList.remove('open'); });
          card.classList.toggle('open');
        }
      });
    });
  </script>
